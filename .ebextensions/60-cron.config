files:
  "/etc/cron.d/square-daily-sync":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Run daily at 02:15 UTC
      15 2 * * * root curl -sS -X POST http://127.0.0.1:8080/tasks/square/sync-all-daily >/var/log/square-sync.log 2>&1

commands:
  reload_cron:
    command: "service crond restart || systemctl restart crond || true"

