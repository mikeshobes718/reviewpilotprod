  <script>document.documentElement.classList.remove('no-js');</script>
</head>
<body>
  <%- include('partials/header') %>

  <section class="hero-full hero-section fade-section hero-split">
    <div class="container hero-grid">
      <div class="hero-left">
        <h1 class="title">Finally, Take Control of Your Online Reviews.</h1>
        <p class="sub">Our smart filtering technology turns your happy customers into 5‚Äëstar reviews on Google, while giving you the insights to improve.</p>
        <div class="hero-actions">
          <% if (user) { %>
            <a class="btn primary" href="/dashboard">Go to Dashboard</a>
            <!-- DEBUG INFO -->
            <div style="font-size: 12px; color: #666; margin-top: 8px;">
              Debug: User session detected (UID: <%= user.uid %>)
              <br><a href="/logout" style="color: #ff4444; text-decoration: underline;">Force Logout</a>
              <br><a href="/debug-session" style="color: #4444ff; text-decoration: underline;">Debug Session</a>
              <% if (typeof isMobile !== 'undefined' && isMobile) { %>
                <br><span style="color: #ff8800;">üì± Mobile Request Detected</span>
              <% } %>
            </div>
          <% } else { %>
            <a class="btn primary" href="/signup">Start free</a>
