<!-- views/signup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <style>
        body { font-family: sans-serif; display: grid; place-content: center; height: 100vh; margin: 0; background-color: #f4f4f9; }
        form { background: white; padding: 2rem; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); display: flex; flex-direction: column; gap: 1rem; width: 300px; }
        input { padding: 0.75rem; border: 1px solid #ccc; border-radius: 4px; }
        button { padding: 0.75rem; border: none; border-radius: 4px; background-color: #28a745; color: white; font-weight: bold; cursor: pointer; }
    </style>
</head>
<body>
    <form action="/signup" method="POST">
        <h2>Create Your Account</h2>
        <input type="text" name="businessName" placeholder="Your Business Name" required>
        <input type="email" name="email" placeholder="Your Email Address" required>
        <input type="password" name="password" placeholder="Create a Password" required>
        <button type="submit">Sign Up</button>
    </form>
</body>
</html>
