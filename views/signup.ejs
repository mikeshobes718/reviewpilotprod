<!-- views/signup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create account • ReviewPilot</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
     <%- include('partials/head') %>
    <style>
        * { box-sizing: border-box; }
        body { font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; background: var(--bg); margin: 0; }
        .base-card { width: 360px; margin: 40px auto; }
        label { font-size: 13px; color: var(--muted); font-weight: 600; }
        p.sub { color: var(--muted); margin: 0 0 18px; font-size: 14px; }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    <div class="auth-grid">
      <div class="auth-left">
        <div>
          <h1>Create your account</h1>
          <p>Join hundreds of businesses turning feedback into 5-star reviews.</p>
        </div>
      </div>
      <div class="auth-right">
        <div class="base-card">
          <div class="brand">
            <div class="badge">ReviewPilot</div>
          </div>
          <h1>Create your account</h1>
          <p class="sub">Start collecting more 5‑star reviews</p>
          <% if (typeof error !== 'undefined' && error) { %>
              <div class="error"><%= error %></div>
          <% } %>
          <form action="/signup" method="POST">
              <input type="hidden" name="_csrf" value="<%= (typeof csrfToken !== 'undefined' ? csrfToken : '') %>">
              <div>
                  <label>Business name</label>
                  <input class="input" type="text" name="businessName" placeholder="Acme Dental" required>
              </div>
              <div>
                  <label>Email</label>
                  <input class="input" type="email" name="email" placeholder="owner@acme.com" required>
              </div>
              <div>
                  <label>Password</label>
                  <input class="input" type="password" name="password" placeholder="Create a password" required>
              </div>
              <button class="btn-primary" type="submit" style="margin-top:24px">Create account</button>
          </form>
          <div class="row" style="margin-top:10px;">
            <span>Already have an account?</span> <a class="link-accent" href="/login">Log in</a>
          </div>
        </div>
      </div>
    </div>
     <%- include('partials/footer') %>
</body>
</html>
