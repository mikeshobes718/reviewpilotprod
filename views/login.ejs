<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log in • Reviews &amp; Marketing</title>
     <%- include('partials/head') %>
     <style>
       /* Mobile-specific optimizations for login page */
       @media (max-width: 768px) {
         .auth-grid {
           min-height: auto;
           padding: 20px 16px;
         }
         
         .auth-card {
           margin: 20px auto;
           padding: 24px 20px;
         }
         
         .auth-card .brand {
           margin-bottom: 8px;
         }
         
         .auth-card .brand img {
           height: 24px;
         }
         
         .form-container h2 {
           font-size: 28px;
           margin-bottom: 6px;
         }
         
         .form-container p.sub-headline {
           font-size: 14px;
           margin-bottom: 24px;
         }
         
         .form-container .form-field {
           margin-bottom: 16px;
         }
         
         .form-container label {
           font-size: 13px;
           margin-bottom: 6px;
         }
         
         .form-container input {
           padding: 12px;
           font-size: 16px;
         }
         
         .form-container .button-container {
           margin-top: 8px;
         }
         
         .form-container .primary-action {
           padding: 14px 24px;
           font-size: 15px;
         }
         
         .form-container .form-footer-link {
           margin-top: 20px;
           font-size: 14px;
         }
         
         /* Reduce spacing between elements */
         .form-container > * + * {
           margin-top: 16px;
         }
         
         .form-container .form-field + .form-field {
           margin-top: 12px;
         }
       }
     </style>
  </head>
  <body class="auth-bg">
    <%- include('partials/header') %>
    <div class="auth-grid">
      <div class="auth-left auth-photo"></div>
      <div class="auth-right">
        <div class="base-card auth-card dark-card">
        <div class="brand"><img src="/logos/main-logo.png" alt="Reviews &amp; Marketing" /></div>
        <div class="form-container">
          <h2>Log in</h2>
          <p class="sub-headline">Access your dashboard</p>
          <% if (typeof error !== 'undefined' && error) { %>
            <% if (error === 'EMAIL_NOT_VERIFIED') { %>
              <div class="noticeBanner" style="margin-top:8px">Please verify your email. We’ve sent a verification link to your inbox.</div>
            <% } else if (error === 'UNAUTHORIZED') { %>
              <div class="noticeBanner" style="margin-top:8px">Incorrect email or password.</div>
            <% } else { %>
              <div class="error"><%= error %></div>
            <% } %>
            <% if (typeof resendLink !== 'undefined' && resendLink) { %>
              <div class="row" style="margin-top:8px"><a class="link-accent" href="<%= resendLink %>">Resend verification email</a></div>
            <% } %>
          <% } %>
          <% if (typeof hint !== 'undefined' && hint) { %>
            <div class="noticeBanner" style="margin-top:8px">
              <%= hint %>
            </div>
          <% } %>
          <form action="/auth/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= (typeof csrfToken !== 'undefined' ? csrfToken : '') %>">
            <div class="form-field">
              <label for="email">Email</label>
              <input id="email" class="input" type="email" name="email" placeholder="you@business.com" required>
            </div>
            <div class="form-field">
              <label for="password">Password</label>
              <input id="password" class="input" type="password" name="password" placeholder="••••••••" required>
            </div>
            <div class="form-field button-container"><button class="btn-primary primary-action" type="submit">Log in</button></div>
          </form>
          <div class="form-footer-link"><a class="link-accent" href="/forgot-password">Forgot password?</a> • <a class="link-accent" href="/signup">Create an account</a></div>
        </div>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
