<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log in • ReviewPilot</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
     <%- include('partials/head') %>
    <style>
        * { box-sizing: border-box; }
        body { font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; background: var(--bg); margin: 0; }
        .base-card { width: 360px; margin: 40px auto; }
        label { font-size: 13px; color: var(--muted); font-weight: 600; }
        p.sub { color: var(--muted); margin: 0 0 18px; font-size: 14px; }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="auth-grid">
      <div class="auth-left">
        <div>
          <h1>Welcome back</h1>
          <p>Let's get you back to growing your business.</p>
        </div>
      </div>
      <div class="auth-right">
        <div class="base-card">
      <div class="brand">
        <div class="badge">ReviewPilot</div>
      </div>
      <h1>Welcome back</h1>
      <p class="sub">Log in to your dashboard</p>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error"><%= error %></div>
      <% } %>
      <form id="login-form" action="/login" method="POST">
        <input type="hidden" name="_csrf" value="<%= (typeof csrfToken !== 'undefined' ? csrfToken : '') %>">
        <div>
          <label>Email</label>
          <input id="email" class="input" type="email" name="email" placeholder="you@business.com" required>
        </div>
        <div>
          <label>Password</label>
          <input id="password" class="input" type="password" name="password" placeholder="••••••••" required>
        </div>
        <div class="row">
          <a class="link-accent" href="/reset-password">Forgot password?</a>
        </div>
        <button id="login-btn" class="btn-primary" type="submit" style="margin-top:24px">Log in</button>
      </form>
      <div class="row" style="margin-top:10px;">
        <span>New here?</span> <a class="link-accent" href="/signup">Create an account</a>
      </div>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %>
    <!-- Client-side Firebase login removed; handled by server via Cognito -->
  </body>
</html>
